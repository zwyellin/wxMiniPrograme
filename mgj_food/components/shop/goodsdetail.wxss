.goods {
	display: flex;
}
.foods-wrapper{
	flex:1;
	overflow: hidden;
}
.foods-wrapper .food-title{
	display: inline-block;
	padding-left:28rpx;
	height:52rpx;
	width: 90%;
	line-height:52rpx;
	border-left:2rpx solid #d9dde1;
	font-size: 24rpx;
	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden;
	color:#666;
	background: #f3f5f7;
}
.foods-wrapper .food-item{
	position: relative;
	display: flex;
	padding: 36rpx;
	border-bottom:1rpx solid rgba(7,17,27,0.1);
}
.foods-wrapper .food-item:last-child{
	margin-bottom:0;
}
.foods-wrapper .icon{
	flex:0 0 114rpx;
	width:114rpx;
	margin-right: 20rpx;
}
.foods-wrapper .icon .icon_img{
	width: 114rpx;
	height: 114rpx;
}
.foods-wrapper .content .detail-name{
	margin: 0 0 16rpx 0;	
	font-size: 28rpx;
	color: rgb(7,17,27);
}
.foods-wrapper .content{
	flex:1;
}
.foods-wrapper .content .detail-descs{
	margin-bottom: 16rpx;
	font-size: 20rpx;
	line-height: 24rpx;
	color: rgb(147,153,159);
}
.foods-wrapper .content .detail-extra{
	font-size: 20rpx;
	line-height: 20rpx;
	color: rgb(147,153,159);	
}
.foods-wrapper .content .detail-extra .detail-count{
	margin-right: 24rpx;
}
.foods-wrapper .content .detail-price{
	/*position: relative;*/
	font-weight: 700;
	line-height: 48rpx;
}
.foods-wrapper .content .now{
	flex: 1;
	margin-right: 16rpx;
	font-size: 28rpx;
	color: rgb(240,20,20);
}
.item-rules {
	margin-top: 10rpx;
}
.rules-left {
	margin-left: 8rpx;
}
.old-price {
	position: relative;
	margin-left: 10rpx;
	font-size: 20rpx;
	color: #999;
}
.del {
	display: block;
	position: absolute;
	border-top: 1px solid #999;
	width: 44rpx;
	top: 12rpx;
	left: 0;
}
.foods-wrapper .content .old{
	font-size: 20rpx;
	text-decoration:line-through;
	color: rgb(147,153,159);
}
.foods-wrapper .content .cartcontrol-wrapper{
	display: flex;
	align-items: center;
	/*position: absolute;
	right: 0;
	bottom: 16rpx;*/
}