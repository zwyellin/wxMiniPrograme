.evaluate {
	background: #f5f5f5
}
.evaluate-wrapper {
	padding: 30rpx 22rpx 24rpx;
	display: flex;
	height: 78rpx;
	color:#333;
	background: #fff;
}
.evaluate-left {
	flex:1;
	border-right: 1rpx solid #f5f5f5;
}
.evaluate-text {
	text-align: center;
	height: 32rpx;
	line-height:32rpx;
}
.evaluate-right {
	flex:2;
}
.evaluate-right-text {
	padding-left: 70rpx;
	height: 36rpx;
}
.text-left {
	margin-left: 10rpx;
	color:#fa9b1b;
}
.text-right {
	margin-right: 28rpx
}
.evaluate-content {
	
	padding-left: 22rpx;
	margin-top: 20rpx;
	background: #fff;
}
.evaluate-border {
	position: relative;
	padding:18rpx 0 28rpx;
	border-bottom: 1rpx solid #f5f5f5;
}
.message-img {
	width: 22rpx;
	height: 22rpx;
	margin: 8rpx 12rpx 0;
}
.evaluate-message {
	margin-top: 22rpx;
	color:#545454;
	letter-spacing: 2rpx;
}
.evaluate_right {
	position: absolute;
	top: 22rpx;
	right: 20rpx;
	display: table-cell;
}
.evaluate_img {
	display: inline-block;
	width: 46rpx;
	height: 46rpx;
	border:1rpx solid #e5e5e5;
	border-radius: 46rpx;
	vertical-align: middle;
}
.evaluate_text {
	padding-right: 20rpx;
}
.shop {
	background:  #f5f5f5;
	color:#333;
	padding-bottom: 40rpx;
}
.shop-header {
	padding: 30rpx 0 18rpx 38rpx;
	border-bottom: 1rpx solid #f5f5f5;
	color:#333;
	background: #fff;
}

.user-center {
  padding: 20rpx 0;
  display: flex;
  background: #fff;
}
.user-message {
  flex:1;
  text-align: center;
  border-right:1rpx solid #f5f5f5;
  color:#666;
}
.shop-content {
	margin-top: 24rpx;
	padding-left: 30rpx;
	background: #fff;
}
.shop-message {
	height: 80rpx;
	line-height: 80rpx;
	border-bottom:1rpx solid #f5f5f5;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}
.shop-message-letter {
	letter-spacing: 2rpx;
	border-bottom:1rpx solid #f5f5f5;
	min-height: 80rpx;
	vertical-align: middle;
}
.shop-flex {
	display: flex;
	padding-right: 26rpx;
	align-items: center;
}
.shop-left {
	margin-left: 16rpx;
}

