.goods {
	padding-bottom: 14rpx;
	border-bottom: 1rpx solid #ebebeb;
	background: #fff;
}
.goods-item {
	flex:1;
	height: 48rpx;
	line-height: 48rpx;
	border-right: 1px solid #ebebeb;
	text-align: center;
	font-size: 28rpx;
}
.arrow_down {
	vertical-align: middle;
	width: 20rpx;
	height: 10rpx;
	margin-left: 6rpx;
}
.goods-wrapper {
	position: relative;
	display: flex;
	padding: 30rpx 26rpx 20rpx;
	background: #fff;
}
.icon{
	position: relative;
	flex:0 0 170rpx;
	height: 130rpx;
	margin-right: 30rpx;
}
.merchant-status {
	position: absolute;
	top: 0;
	left: 0;
	width: 170rpx;
	height: 130rpx;
	border-radius: 6rpx;
}
.content{
	flex:1;			
}
.icon-image {
	width: 170rpx;
	height: 130rpx;
	border-radius: 6rpx;
	overflow: hidden;
}
.icon-num {
	position: absolute;
	top: -12rpx;
	right: -12rpx;
	width: 30rpx;
	line-height: 30rpx;
	font-size: 16rpx;
	border-radius: 15rpx;
	background: #ee5650;
	color: #fff;
	text-align: center;
}
.name {
	display: block;
	margin: 0 0 24rpx 0;
	height: 28rpx;
	line-height: 28rpx;
	font-size: 28rpx;
	color: #333;
}
.name-txt {
	display: inline-block;
	width: 74%;
	/*white-space: nowrap;*/
	height: 28rpx;
	text-overflow: ellipsis;
	overflow: hidden;
}
.desc{
	display: block;
	margin-bottom: 20rpx;
	font-size: 24rpx;
	line-height: 24rpx;
	color: #666;
}
.desc-content {
  position: relative;
}
.desc-count {
  position: absolute;
  display: inline-block;
  width: 60rpx;
  left: 130rpx;
  color: #ff6000;  
}
.desc-count-dan {
  position: absolute;
  width: 180rpx;
  /*top:4rpx;*/
  left: 200rpx;
  display: inline-block;
}
.extra{
	font-size: 24rpx;
	line-height: 24rpx;
	color: #666;
	padding-bottom: 20rpx;
	border-bottom: 1rpx dashed #ebebeb;
}
.extra-img {
	width: 26rpx;
	height: 26rpx;
}
.count{
	margin-right: 24rpx;
}

.cartcontrol-wrapper{
	position: relative;
	padding-top: 16rpx;	
}
.cartcontrol-down{
	position:absolute;
	right:18rpx;
	padding-top:16rpx;
	top:158rpx;
	width:40rpx;	
}
.cartcontrol-content {
	height: 34rpx;
	line-height: 34rpx;	
}
.cartcontrol-content .name {
	font-size: 24rpx;
	letter-spacing: 2rpx;
	color:#999;
	text-overflow: ellipsis;
	/*white-space: nowrap;*/
	overflow: hidden;
}
.cartcontrol-wrapper .bran{
	display:inline-block;
	vertical-align: top;
	flex:0 0 26rpx;
	width: 26rpx;
	height: 26rpx;
	margin-right: 6rpx;
}
.posi {
	position: absolute;
	top: 0;
	bottom:0;
	/*overflow: hidden;*/
}					