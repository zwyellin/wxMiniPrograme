/* components/groupPurchaseSortBar/groupPurchaseSortBar.wxss */
@import "../../app.wxss";
/* 方向图标 */
.directionIcon{
    width:30rpx;
    height:30rpx;
}

.sortActive2Content{

}
.sortActive2ContentItem{
    padding-top:30rpx;
    padding-bottom: 30rpx;
}
.sortActive2ContentTitle{
    color:#333;
    font-size:30rpx;
    font-weight: bold;
}
.sortActive2ContentBtn{
    font-size: 26rpx;
    display: inline-block;
    width: 152rpx;
    text-align: center;
    line-height: 54rpx;
    margin-right: 20rpx;
    margin-bottom: 30rpx;
    background: grey;
    border:1px solid grey;
    border-radius: 4rpx;
}
.sortActive2ContentBtnActive{
    color:#ff9900 !important;
}
slider{
    margin: 10rpx 0;
}

/*btn 按钮 */
button{
    height:54rpx;
    line-height:54rpx;
    width:152rpx;
    font-size: 26rpx;
    color:#333;
    border-radius: 4rpx;
    margin: 0;
    padding:0;
}
.btn_Active{
    background: #ff9900;
    color:#fff;
}
