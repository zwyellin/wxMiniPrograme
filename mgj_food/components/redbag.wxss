.redbag {
	position: absolute;
	width:580rpx;
	max-height: 892rpx;
	top: 50%;
	left: 50%;
	transform:translate(-50%,-50%);
	border-radius: 20rpx;
	z-index: 1000;
}
.redbag-close {
	position: absolute;
	left: 50%;
	bottom: -94rpx;
	transform: translateX(-50%);
	z-index: 10000;
}
.redbag-close-img{
	width: 54rpx;
	height:54rpx;
}
.redbag-header {
	width:580rpx;
	height: 309rpx;
	overflow: hidden;
}
.redbag-img {
	width:580rpx;
	height: 309rpx;
}
.redbag-content {
	padding: 0 32rpx;
	background: #e3003a;
	margin-bottom: 20rpx;
}
.lottery-content {
	padding: 32rpx 0 22rpx 0rpx;
	background: #fff;
	align-items: center;
}
.lottery-content-right {
	position: relative;
	flex: 1;
	margin-left: 20rpx;
}
.lottery-icon {
	width: 176rpx;
	text-align: center;
	font-weight: 700;
	border-right: 4rpx dotted #e2e0dc;
	overflow: hidden;
}
.lottery-content-text {
	margin-bottom: 24rpx;
	font-weight: 500;
	font-size: 32rpx;
	letter-spacing: 2rpx;
	font-weight: 500;
}
.money {
	color:#999
}
.get-redbag {
	position: absolute;
	top: 24rpx;
	right:20rpx;
	height: 50rpx;
	width: 120rpx;
	line-height: 50rpx;
	text-align: center;
	border-radius: 50rpx;
	background: #d7063c;
	color:#fff;
	letter-spacing: 2rpx;
}
.redbag-food {
	padding: 14rpx 32rpx 22rpx 32rpx;
	font-size: 20rpx;
	text-align: center;
	color:#f1afa0;
	background: #e3003a;
	margin-top: -20rpx; 
}
.common-mask {
    position: fixed;
    z-index: 999;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    opacity: 0.3;
    background: #000;
}
.receive{
	background: #a9adb3;
}