/* 加载更多 */
.loading-info {
  width: 100%;
  text-align: center;
  padding: 5px 0;
  overflow: hidden;
  transition: all 0.4s;
}
.img-loading, 
.loading-text {
  display: inline-block;
  vertical-align: middle;
}
.img-loading {
  width: 24px;
  height: 24px;
  margin-right: 22rpx;
  animation: loadingRotate 2s infinite;
}
@keyframes loadingRotate
{
  from {
    transform: rotate(0);
  }
  to {
    transform: rotate(360deg);
  }
}
.loading-text {
  color: #666666;
  font-size: 14px;
}
