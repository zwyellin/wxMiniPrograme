/*底线*/
.bottom-info {
  width: 100%;
  text-align: center;
  padding: 5px 0;
}
.bottom-text {
  position: relative;
  display: inline-block;
  color: #666666;
  font-size: 14px;
}
.bottom-text:after,
.bottom-text:before {
  position: absolute;
  width: 150rpx;
  height: 1px;
  background-color: #c1c1c1;
  top: 0px;
  bottom: 0px;
  margin: auto;
  content: "";
}
.bottom-text:before {
  left: -170rpx;
}
.bottom-text:after {
  right: -170rpx;
}


