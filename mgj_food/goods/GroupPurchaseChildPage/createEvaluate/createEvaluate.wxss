/* 增加图片 点击 */
.addImage{
    margin-top: 30rpx;
    width: 100%;/*white-space: nowrap;元素不换行，否则会在下一行显示，不会出现滚动条*/
    flex-wrap: wrap;
}
.addImage image{
    width: 150rpx;
    height: 150rpx;
}
.addImage text{
    position:absolute;
    top:0;
    right:0;
    display:inline-block;
    padding:0 15rpx;
    background-color:grey;
}
