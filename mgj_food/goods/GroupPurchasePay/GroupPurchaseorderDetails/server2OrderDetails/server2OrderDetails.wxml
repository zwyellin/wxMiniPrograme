
<!-- 团购套餐 -->
<import src="../../../../components/star/star.wxml" />
<wxs module="fixed" src="../../../../utils/star.wxs"></wxs>

<view class="container page">
    <!-- 团购套餐展示 -->
    <view class="pageItem row-line" style="padding-bottom:40rpx">
        <!-- 套餐名字-->
        <view class="font-size1 font-bold  flex flex-spaceBetween flex-row-center" style="padding-bottom:20rpx;">
            <image src="{{groupPurchaseOrder.groupPurchaseCouponImages}}" class="serviceCategoryItem_tuangouImage"/>
            <view class="flex1 flex flex-row-center flex-spaceBetween">
                <view>
                    <view>{{groupPurchaseOrder.groupPurchaseName}}</view>
                    <text>￥{{groupPurchaseOrder.totalPrice}}</text>
                </view>
                <navigator wx:if="{{hasUnuseCouponCode}}" url="/goods/GroupPurchasePay/GroupPurchaseorderDetails/orderUse/orderUse?orderId={{orderId}}">
                    <button class="bg-button-color font-size2" style="color:white;margin:0;line-height:2" >立即使用</button>
                </navigator>
            </view>
        </view>
        <!-- 预约信息，已售-->
        <view class="mt20">
            <view class="font-size5">{{groupPurchaseOrderCouponCodeList[0].isBespeakText}}<text class="column-line">|</text>{{groupPurchaseOrderCouponCodeList[0].isCumulateText}}</view>
        </view>
    </view>
    <view class="pageItem" style="padding-bottom:20rpx;">     
        <!-- 类别 -->
        <view >
            <view class="mt30" class="categoryType">
                <!-- 标题 -->
                <text class="font-size4 color1 font-bold">团购券内容:</text>
                <!-- 内容 -->
                <view style="margin-top:14rpx">
                    <view wx:for="{{groupPurchaseOrderCouponGoodsList}}"  wx:key="index"
                    class="flex flex-spaceBetween font-size4 color2" style="padding-top:16rpx;">
                        <text class="categoryTypeItem">{{item.name}}({{item.quantity}}份)</text>
                        <text>￥{{item.originPrice}}</text>
                    </view>
                </view>
            </view>
        </view>
    </view>

    <!-- 板块 购票须知 -->
    <view class="pageItem mt20  ticketMsg">   
        <view class="attr-items">
            <!-- 有效期 -->
            <view class="attr-item">
                <text class="item-title">有效期:</text>
                <text class="item-content">有效期至{{groupPurchaseOrder.groupPurchaseCouponEndTime}}</text>
            </view>
            <!-- 券码 -->
            <view class="attr-item">
                <text class="item-title">劵码:</text>
                <view wx:for="{{groupPurchaseOrderCouponCodeList}}" wx:key="index" 
                class="flex flex-spaceBetween flex-row-center item-content">
                    <text>{{item.couponCode}}</text>
                    <text>{{item.statusText}}</text>
                </view>
                <text class="item-content">{{findNewTOrderByIdObj.id}}</text>
            </view>
        </view>
    </view>

    <view class="pageItem padding-tb-20 mt20" >
        <!-- 商家信息内容 -->
        <text style="color:#333;font-size:32rpx;font-weight:bold">商家信息</text>
        <navigator class="flex flex-spaceBetween" style="background:white"
         url="/goods/GroupPurchaseShop/GroupPurchaseShop?groupPurchaseMerchantId={{groupMerchantInfo.id}}">
            <!-- 左边 -->
            <image src="{{groupMerchantInfo.imgs[0] || '../../../../images/merchant/merchantLogo.png'}}" class="flex0"  style="width:195rpx;height:130rpx;margin-right:20rpx;" />
            <!-- 右边 -->
            <view class="flex1 flex flex-row-center" style="maring-top:-6rpx">
                <!--左边-->
                <view >
                    <view>
                        <text class="font-size2">{{groupMerchantInfo.name}}</text>
                    </view>
                    <view>
                        <template is="star-AttrScore" data="{{size:24,item:groupMerchantInfo,AttrName:'averageScore'}}"></template>
                        <text class="font-size3">人均￥{{groupMerchantInfo.evaluateAvgPersonPrice || groupMerchantInfo.avgPersonPrice}}</text>
                    </view>
                    <navigator class="font-size3 text-overflow-dots"
                    url="/goods/mapview/mapview?latitude={{groupMerchantInfo.latitude}}&longitude={{groupMerchantInfo.longitude}}&name={{groupMerchantInfo.name}}">
                        <image src="../../../../images/images/map_1.png" style="width:40rpx;height:40rpx;"/>
                        <text>距您{{fixed.round(groupMerchantInfo.distance)}}km<text class="column-line">|</text>{{groupMerchantInfo.address}}</text>
                    </navigator>
                </view>
                <!-- 右边 电话 -->
                <image class="flex0" src="../../../image/tel@2x.png" style="width:60rpx;height:60rpx;padding-left:20rpx;" catch:tap="callPhoneTap"/>
                <!-- 电话弹窗 -->
                <mask position="bottom" wx:if="{{tel_mask_show}}" catch:maskclick="maskCancelTap">
                    <view style="background:white;border-radius:20rpx;margin:20rpx;text-align:center">
                        <view><text style="color:#999;font-size:24rpx;line-height:1.5">商家服务热线</text></view>
                        <scroll-view  scroll-y="{{true}}" style="max-height:260rpx;">
                            <view wx:for="{{groupMerchantInfo.contacts}}" 
                            style="font-size:28rpx;line-height:3;color:blue;border-top:1px solid #eee"
                            data-telphone="{{item}}"
                            wx:key="index"
                            catch:tap="telphoneTap">
                            {{item}}
                            </view>
                        </scroll-view>
                    </view>
                    <view style="font-size:28rpx;line-height:3;color:blue;background:white;border-radius:20rpx;margin:20rpx;text-align:center" catch:tap="maskCancelTap">取消</view>
                </mask>
            </view>
        </navigator>
    </view>
    <!-- 订单信息 -->
    <view class="pageItem mt20 padding-tb-20">
        <view style="font-size:28rpx;">
            <text class="item-title">订单信息:</text>
            <view class="textBlock flex">
                <!-- 左边 -->
                <view style="width:150rpx;">
                    <text>订单编号</text>
                    <text>付款时间</text>
                    <text>数量</text>
                    <text>总价</text>
                </view>
                <!-- -->
                <view>
                    <text>{{groupPurchaseOrder.id || groupPurchaseOrder.transactionId}}</text>
                    <text>{{groupPurchaseOrder.payDoneTime}}</text>
                    <text>{{groupPurchaseOrderCouponCodeList.length}}</text>
                    <text>{{groupPurchaseOrder.totalPrice}}</text>
                </view>
            </view>
        </view>
    </view>

    <!-- 反馈，退款，评价-->
    <view class="pageItem mt20 flex padding-tb-20" style="justify-content:flex-end;">
        <navigator url="/goods/GroupPurchasePay/GroupPurchaseorderDetails/feedback/feedback?groupPurchaseCouponType={{groupPurchaseOrder.groupPurchaseCouponType}}&&merchantId={{groupMerchantInfo.id}}">
            <button class="bg-button-color font-size2" style="color:white;margin-left:20rpx;line-height:2" >反馈</button>
        </navigator>
        <navigator wx:if="{{hasUnuseCouponCode}}" url="">
            <button class="bg-button-color font-size2" style="color:white;margin-left:20rpx;line-height:2" >退款</button>
        </navigator>
        <navigator wx:if="{{hasuseCouponCode||true}}" url="/goods/GroupPurchaseChildPage/createEvaluate/createEvaluate?orderId={{orderId}}">
            <button class="bg-button-color font-size2" style="color:white;margin-left:20rpx;line-height:2" >评价</button>
        </navigator>
    </view>
</view>