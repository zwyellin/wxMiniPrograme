<wxs module="fixed" src="../../../utils/star.wxs"></wxs>
<view class="container">
	<view class="share-firend">
		<image src="../../../images/images/person_redbag.png" style="height:290rpx;width:750rpx;border-radius:0" bindload='imageFinishLoad' />
	</view>
	<view class="share-money">
		<view style="font-size:70rpx;font-bold">￥{{fixed.fomatFloat(cashbackAmtSum,2)}}</view>
		<view style="font-size:28rpx;" class="mt20">累计返现</view>
		<view style="font-size:28rpx;" class="mt20">累计返现金额已存入您的账户余额，可用于消费或提现</view>
	</view>
	<view wx:if="{{imageFinishLoad}}" class="shareResultsShow">
		<view class="shareType flex flex-spaceBetween flex-row-center">
			<text class="shareTypeText" catch:tap="shareTypeTap" data-type="0" style="{{type==0 ? 'color:rgb(254,57,30); border-bottom: 1px solid rgb(254,57,30);':''}}">邀请红包{{'('+userList0.length+')'}}</text>
			<text style="color:#e5e5e5">|</text>
			<text class="shareTypeText" catch:tap="shareTypeTap" data-type="1" style="{{type==1 ? 'color:rgb(254,57,30); border-bottom: 1px solid rgb(254,57,30);':''}}">分享红包{{'('+userList1.length+')'}}</text>
		</view>
		<view>
			<scroll-view scroll-y="true" style="height:{{windowScrollHeight}}px" bindscrolltolower="shareResultsScrolltolower">
			<view class="results-content flex flex-spaceBetween flex-row-center"
				wx:for="{{userList}}" 
				wx:for-item="item" 
				wx:for-index="index" 
				wx:key="index">
				<view class="flex flex-row-center portrait">
					<image wx:if="{{item.headImg}}" class="portrait-img flex0" src="{{item.headImg}}"></image>
					<image wx:if="{{!item.headImg}}" class="portrait-img flex0" src="../../../images/images/login_no.png"></image>
					<text>{{item.inviteeMobile}}</text>
				</view>
				<text class="fr" style="color:#ff9900">+ ￥{{item.cashbackAmt}}</text>
			</view>
			<view wx:if="{{userList.length==0}}" class="results-no">
				<block wx:if="{{type==0}}">
					<text>暂无邀请红包</text>
					<navigator open-type="navigate" url="/other/firends/shareFirend/shareFirend?index=0">赚取红包</navigator>
				</block>
				<block wx:else>
					<text>暂无分享红包</text>
					<navigator open-type="navigate" url="/other/firends/shareFirend/shareFirend?index=1">赚取红包</navigator>
				</block>
			</view>
			<view class="loading-info" wx:else >
				<view wx:if="{{userList.length>4 && ((type==0 && islistLast0) || (type==1 && islistLast1))}}"  class="bottom-text">暂无更多</view>
				<block wx:elif="{{loading}}">
					<image src="../../../images/merchant/loading.png" class="img-loading"></image>
					<view class="loading-text">正在加载，请稍候</view>
				</block>	
			</view>
			</scroll-view>
		</view>
	</view>
</view>