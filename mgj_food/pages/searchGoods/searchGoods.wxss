@import "../../components/goods.wxss";
@import "../../components/star/star.wxss";
.search-goods {
	position: relative;
	padding: 0 30rpx 30rpx;
	flex-wrap:wrap;
}
.placeholder {
	margin-left: 8rpx;
}
.search-goods input {
	padding-left: 220rpx;
	height: 60rpx;
	line-height: 60rpx;
	background: #eaeaea;
}
.icon-search {
	position: absolute;
	top:15rpx;
	left: 200rpx;
	height: 32rpx;
  	width: 32rpx;
  	z-index: 100;
}
.search-background {
	background: #fff;
}
.desc-content {
  position: relative;
}
.desc-count {
  position: absolute;
  display: inline-block;
  width: 60rpx;
  left: 140rpx;
  color: #ff6000;  
}
.desc-count-dan {
  position: absolute;
  width: 120rpx;
  /*top:4rpx;*/
  left: 200rpx;
  display: inline-block;
}
.hot-search {
	padding: 22rpx 0 16rpx 30rpx;
}
.hot-text {
	margin-top: 30rpx;
	padding: 0 28rpx;
	height: 50rpx;
	line-height: 17rpx;
	margin-right: 20rpx;
	border:1rpx solid #cccccc;
	box-sizing: border-box;
}
.hot-active {
	background:#fe9800;
	color:#fff;
}