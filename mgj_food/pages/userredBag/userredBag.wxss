.no-order {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.no-order-img {
  width: 201rpx;
  height: 175rpx;
}
.no-order-text {
  font-size: 22rpx;
  text-align: center;
}
.lottery-wrapper {
	padding: 20rpx 30rpx 0;
}
.lottery-content {
	padding: 40rpx 0 50rpx 40rpx;
	background: #fff;
	font-size: 36rpx;
	align-items: center;
	border-bottom:1rpx dashed #ededed;  
}
.lottery-icon {
	width: 110rpx;
	height: 110rpx;
	margin-right: 20rpx;
	overflow: hidden;
}
.lottery-img {
	width: 110rpx;
	height: 110rpx;
}
.lottery-icon-img {
	width: 110rpx;
	height: 110rpx;
}
.lottery-content-text {
	margin-bottom: 24rpx;
	font-weight: 500;
}
.money {
	color:#999
}
.lottery-content-price {
	margin-left: 170rpx;
	color:#ff3333;
}
.lottery-express {
	padding: 0 28rpx 0 38rpx;
	height: 52rpx;
	line-height: 52rpx;
	background: #fff;
	font-size: 22rpx;
	color:#333;
}
.active {
	background: #ff5959;
	border-bottom:1rpx dashed #ff5959; 
	color:#fff;
}