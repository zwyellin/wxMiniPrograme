@import "../../../components/address/address.wxss"
.page-address{
	color:#333;
	background: #f5f5f5;
}
.search-address {
	position: fixed;
	width: 92%;
	padding: 0 30rpx 30rpx;
	background: #fff;
	z-index: 100;
}
.placeholder {
	margin-left: 8rpx;
}
.search-address input {
	padding-left: 16rpx;
	height: 60rpx;
	line-height: 60rpx;
	background: #eaeaea;
}
.city-now {
	min-width: 120rpx;
	margin-right: 20rpx;
	align-items: center;
	justify-content: center;
	color: #ff9900;
}
.region-icon {
	width: 24rpx;
	height: 12rpx;
	margin-left: 6rpx;
	margin-top: 5rpx;
}
.pad-address {
	padding:0 30rpx;
	background: #f5f5f5;
	height: 74rpx;
	line-height: 74rpx;
}
.address-top {
	position: relative;
	/*margin-top: 20rpx;*/
	background: #fff;
}
.now-address {
	margin-top: 90rpx;
}
.search-top_address {
	position:absolute;
	top:30px;
	bottom: 0;
	width:100%;
	background: #fff;
}
.now-address-text {
	display: inline-block;
	width: 500rpx;
	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden;
}
.address-imgtext {
	display: table-cell;
}
.address-img {
	display: inline-block;
	height: 30rpx;
	width: 30rpx;
	margin-right: 12rpx;
	vertical-align: middle;
}
.reset-address {
	transition:all 1s;
	transition: rotate(7200deg);
}
.address-text {
	display: inline-block;
	vertical-align: middle;
}
.nearby-address {
	/*padding-bottom: 100rpx;*/
	padding-bottom: 32rpx;
}
.nearby-address-text {
	letter-spacing: 2rpx;
	background: #fff;
	border-bottom: 1rpx solid #eaeaea;
}
.nearby-address-text:last-child {
	border-bottom: none;
}
.nearby-address-border {
	padding:26rpx 30rpx;
}
/*   城市列表  */
.city-wrapper {
	position: fixed;
	width: 100%;
	top: 240rpx;
	bottom:0;
	background: #fff;
	z-index: 10;
}
.city-header {
	padding:0 30rpx 0 22rpx;
	background: #f5f5f5;
	height: 72rpx;
	border-bottom: 2rpx solid #e1e1e1;
	font-weight: 500;
}
.header-item {
	padding: 0 8rpx;
	margin: 22rpx 32rpx 0 0;
}
.header-item:last-child {
	margin-right: 0;
}
.item-active {
	border-bottom: 2px solid #ff9900;
}
.city-item {
	padding:0 30rpx;
	height: 88rpx;
	line-height: 88rpx;
	box-sizing: border-box;
	border-bottom: 1rpx solid #ededed;
}
.city-item:last-child {
	border: none;
}