@import "../../../components/address/address.wxss"
.page-address{
	color:#333;
	background: #f5f5f5;
}
.search-address {
	position: relative;
	padding: 0 30rpx 30rpx;
	background: #fff;
}
.placeholder {
	margin-left: 8rpx;
}
.search-address input {
	padding-left: 260rpx;
	height: 60rpx;
	line-height: 60rpx;
	background: #eaeaea;

}
.pad-address {
	padding:0 30rpx;
	background: #f5f5f5;
	height: 74rpx;
	line-height: 74rpx;
}
.address-imgtext {
	display: table-cell;
}
.address-img {
	display: inline-block;
	height: 30rpx;
	width: 30rpx;
	margin-right: 12rpx;
	vertical-align: middle;
}
.reset-address {
	transition:all 1s;
	transition: rotate(7200deg);
}
.address-text {
	display: inline-block;
	vertical-align: middle;
}
.nearby-address {
	padding-bottom: 100rpx;
}
.nearby-address-text {
	letter-spacing: 2rpx;
	background: #fff;
}
.nearby-address-border {
	padding:26rpx 30rpx;
	border-bottom: 1rpx solid #eaeaea;
}