@import "../cartItem/cartItem.wxss"
@import "../../../components/showToast/showToast.wxss";
.cart-detail {
	text-align:center;
	background: #fff;
	height: 360rpx;
}
.cart-detail-img {
	height: 152rpx;
	width: 152rpx;
	border-radius: 152rpx;
	overflow: hidden;
}
.cart-detail-txt {
	font-size: 36rpx;
	/*text-align: center;*/
	margin-top: 10rpx;
}
.txt-else {
	color:#999;
	font-size: 22rpx;
	margin-top: 4rpx;
}
.cart-detail-food {
	margin-top: 24rpx;
}
.no-cart {
	display: inline-block;
	height: 60rpx;
	line-height: 60rpx;
	width: 160rpx;
	border: 1rpx solid #c4c4c4;
	box-sizing: border-box;
	letter-spacing: 4rpx;
	font-size: 26rpx;
}
.order-flex {
	display: flex;
	align-items: center;
	vertical-align: middle;
}
.cartorder-food {
	/*margin-top:1rpx solid ;*/
  height: 90rpx;
  line-height: 90rpx;
  border-top: 1rpx solid #eaeaea;
  text-align: center;
  font-size: 28rpx;
}
.cartorder-img {
	width: 30rpx;
	height: 30rpx;
	margin-right: 20rpx;
	vertical-align: middle;
}
.cartorder-txt {
	display: inline-block;
	vertical-align: middle;
}
.order-detail {
	margin-top: 20rpx;
	background: #fff;
}
.order-detail-title {
	height: 88rpx;
	line-height: 88rpx;
	border-bottom: 1rpx solid #eaeaea;
	padding: 0 30rpx;
}
.txt-space {
	letter-spacing: 2rpx;
}
.txt {
	display: inline-block;
	font-size: 30rpx;
	text-overflow: ellipsis;
	white-space: nowrap;
	overflow: hidden;
}
.txt-order {
	display: inline-block;
	color:#333;
	font-size: 30rpx;
	white-space: nowrap;
}
.txt-w {
	display: inline-block;
	width: 152rpx;
}
/* 红包 */

.redbag {
	position: absolute;
	width:530rpx;
	left: 50%;
	transform:translateX(-50%);
	z-index: 1000;
}
.redbag-close {
	position: absolute;
	right: -16rpx;
	top: -70rpx;
	z-index: 10000;
}
.redbag-close-img{
	width: 54rpx;
	height:54rpx;
}
.redbag-header {
	width:530rpx;
	height: 260rpx;
	overflow: hidden;
}
.redbag-img {
	width:530rpx;
	height: 260rpx;
}
.redbag-content {
	padding: 0 32rpx;
	background: #e3003a;
}
.lottery-content {
	padding: 32rpx 0 22rpx 0rpx;
	background: #fff;
	align-items: center;
}
.lottery-content-right {
	flex: 1;
	margin-left: 50rpx;
}
.lottery-icon {
	width: 176rpx;
	text-align: center;
	font-weight: 700;
	border-right: 4rpx dotted #e2e0dc;
	overflow: hidden;
}
.lottery-content-text {
	margin-bottom: 24rpx;
	font-weight: 500;
	font-size: 32rpx;
	letter-spacing: 2rpx;
	font-weight: 500;
}
.money {
	color:#999
}
.redbag-food {
	padding: 14rpx 32rpx 22rpx 32rpx;
	text-align: center;
	font-size: 20rpx;
	color:#f1afa0;
	background: #e3003a; 
}
.common-mask {
    position: fixed;
    z-index: 999;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    /*opacity: 0.3;*/
    background: #000;
}
.order-name-else {
	display: inline-block;
  	width: 50%;
 	 white-space: nowrap;
  	text-overflow: ellipsis;
  	overflow: hidden;
}
.order-menu-else {
  padding: 0 38rpx 0 30rpx;
  font-size: 26rpx;
  color: #333;
  margin-top: 36rpx;
}

/* 订单追踪 */
.track-entrance {
	margin: 0;
	padding-left: 12rpx;

}
.order-track {
	position: fixed;
	bottom: 0;
	width: 100%;
	height: 888rpx;
	color:#333;
	background: #fff;
	z-index: 1000;
}
.track-header {
	position: relative;
	padding-right: 44rpx;
	height: 96rpx;
	line-height: 96rpx;
	text-align: center;
	font-size: 34rpx;
	border-bottom: 1rpx solid #eaeaea;
}
.track-close {
	position: absolute;
	right: 44rpx;
}
.track-content {
	padding: 82rpx 30rpx 138rpx 56rpx;
}
.track-success {
	flex-direction:column;
	flex:0 0 62rpx;
	width:62rpx;
	margin-top: 7px;
}
.track-status {
	flex:1;
	color:#333;
	font-size: 15px;
}
.track-data {
	flex:0 0 120px;
	width: 120px;
	color: #999;
	font-size: 15px;
}
.track-top {
	height:33px;
}
.track-yuan {
	/*display: inline-block;*/
	width: 6px;
	height: 6px;
	border-radius: 6px;
	background: #c8c8c8;
}
.track-statusyuan {
	position: absolute;
	padding: 5px;
	margin-left: -4px;
	margin-top: -10px;
	border-radius: 15px;
	background: #ff9900;
	z-index: 1001;
}
.track-location {
	position: relative;
}
.track-active {
	color:#ff9900;
	font-weight: 700;
}
.line{
	height: 47px;
	margin-left: 3px;
	border-left: 1rpx solid #d5d5d5;
}
.posi {
	position: relative;
	top: 0;
	bottom:0;
	overflow: hidden;
}	

