@import "../../components/star/star.wxss";
@import "../../components/showToast/showToast.wxss";
.order {
    margin-top: 20rpx;
    background: #fff;
}
.evaluate-item {
	  display: flex;
	  position: relative;
  	padding: 0 38rpx 0 30rpx;
  	height: 100rpx;
  	line-height: 100rpx;
}
.order-evaluate {
	/*padding: 36rpx 0*/
}
.evaluate-item-esle {
	height: 80rpx;
	line-height: 80rpx;
}
.text-fr {
  position: absolute;
  top: -1rpx;
  right: 76rpx;
}
.evaluate-star {
	  position: absolute;
	  top:7rpx;
	  right: 38rpx;
    color:#049eb5;
}
.evaluate-border {
	border-bottom: 1px solid #dadada;
  border-top: 1px solid #dadada;
}
.header-img {
  	width: 60rpx;
 	  height: 60rpx;
  	display: inline-block;
  	vertical-align: middle;
  	border-radius: 60rpx;
}
.header-txt {
  	display: inline-block;
  	vertical-align: middle;
  	margin-left: 20rpx;
}
.query-img {
	  width: 30rpx;
  	height: 14rpx;
  	display: inline-block;
  	vertical-align: middle;
  	transform: rotate(-90deg);
  	margin-top: 20rpx;
}
.post-evaluate {
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  background: #ff9900;
  color:#fff;
  letter-spacing: 4rpx;
}