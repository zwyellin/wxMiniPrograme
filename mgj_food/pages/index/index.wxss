@import "../../components/goods.wxss";
@import "../../components/star/star.wxss";
@import "../../components/common/common.wxss";
.page {
  padding: 0 20rpx;
  background: #fff;
}
.no-goods {
  background: #f5f5f5;
}
.search-view {
  display: flex;
  padding-bottom: 20rpx; 
}
.adress-box {
  display: flex;
  width: 204rpx;
  height: 58rpx;
  border-radius: 58rpx;
  padding: 0 10rpx 0 14rpx;
  font-size: 20rpx;
  background: #a6a6a6;
  overflow: hidden;
}
.icon-adress {
  margin-top: 16rpx;
  height: 27rpx;
  width: 21rpx;
}
.left-img {
  flex:0 0 21rpx;
  width: 21rpx;
}
.adress-move {
  position: absolute;
}
.adress-content{
    position: relative;
    flex:1;
    height: 100%;
    padding: 0 10rpx;
    font-size: 22rpx;
    white-space: nowrap;
    overflow: hidden;
}
.adress-text{
    /*width: 134rpx;*/
    height: 100%;
    line-height: 58rpx;
    white-space:nowrap;
    /*overflow: hidden;*/
}
.right-img {
  flex:0 0 26rpx;
  width: 26rpx;
}
.icon-adress-right {
  margin-top: 24rpx;
  height: 12rpx;
  width: 26rpx;
  transform: rotate(-90deg);
  /*float: right;*/
}
.adress-text {
  white-space:nowrap;
  color:#fff;
}
.search-box {
  display: flex;
  height: 58rpx;
  line-height: 58rpx;
  width: 458rpx;
  border-radius: 58rpx;
  margin-left: 20rpx;
  background: #ededed;
}
.desc-content {
  position: relative;
}
.desc-count {
  position: absolute;
  display: inline-block;
  width: 60rpx;
  left: 140rpx;
  color: #ff6000;  
}
.desc-count-dan {
  position: absolute;
  width: 120rpx;
  /*top:4rpx;*/
  left: 200rpx;
  display: inline-block;
}
.icon-search {
  flex:0 0 50;
  width: 50rpx;
  text-align: center;
}
.icon-adress_search {
  height: 26rpx;
  width: 26rpx;
}
.search-input {
  flex:1;
  font-size: 20rpx;
  height: 58rpx;
  line-height: 58rpx;
}
.search-input input {
  height: 58rpx;
  line-height: 58rpx;
}
.class-block {
  display: flex;
  flex-wrap:wrap;
  padding: 40rpx 40rpx 0 46rpx;
  color:#333;
  background: #fff;
}
.class-content {
  font-size: 26rpx;
  margin-bottom: 30rpx;
  width: 136rpx;
  text-align: center;
  margin-right: 40rpx;
}
.class-content:nth-child(4){
  margin-right: 0rpx;
}
.class-content:nth-child(8){
  margin-right: 0rpx;
}
.class-icon {
  width: 86rpx;
  height: 86rpx;
  margin: 0 auto;
  border-radius: 86rpx;
}
.class-text {
  letter-spacing: 4rpx;
  margin-top: 6rpx;
  text-align: center;
}
/* swiper */
.swiper-banner {
  width: 100%;
  height: 234rpx;
}
.slide-image {
  width: 100%;
  height: 234rpx;
}
.block {
  width: 100%;
  height: 25rpx;
  background: #ededed;
}
.title{
  display: flex;
  width: 60%;
  margin: 22rpx auto 34rpx auto;
}
.black {
  width: 100%;
  height: 26rpx;
  background: #ededed;
}
.icon-title {
  width: 40rpx;
  height: 40rpx;
  padding-left: 20rpx;
  line-height: 40rpx;
}
.line{
  flex:1;
  position: relative;
  top:-18rpx;
  border-bottom: 1rpx solid #ffb27f;
}
.text{
  padding: 0 24rpx;
  font-weight: 700;
  font-size: 28rpx;
  line-height: 40rpx;
}
.time {
  position: fixed;
  top: 62rpx;
  width: 100%;
  height: 574rpx;
  background: #fff;
  z-index: 19999
}
.agent-header {
  text-align: center;
  margin: 0 auto;
  width: 280rpx;
  height: 190rpx;
}
.agent-img {
  text-align: center;
  margin: 0 auto;
  width: 280rpx;
  height: 190rpx;
}
.no-agent {
  width: 100%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.agent-txt {
  text-align: center;
  white-space: nowrap;
  letter-spacing: 2rpx;
}
.goods-header-top {
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 1000;
}
.item-active {
  color:#ff9900;
}

