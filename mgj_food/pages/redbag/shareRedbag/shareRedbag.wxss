@import "../../../components/showToast/showToast.wxss";
.header-img {
	height: 850rpx;
	width: 100%;
}
.red-content {
	position: absolute;
	background:#ff2853;
	padding: 0 20rpx 20rpx 20rpx;
	margin-top: -144rpx;
}
/* 注册开始  */
.red-register {
	background: #ff94a9;
	padding:40rpx 30rpx;
	border-radius: 10px;
	color:#666;
	font-weight: 700;
}
.register-mobile {
	margin-bottom: 30rpx;
	height: 88rpx;
	width:100%;
	border-radius: 10rpx;
	font-size: 27rpx;
	background: #fff;
}
.input-mobile {
	padding-left: 16rpx;
	height: 88rpx;
	border-radius: 10rpx;
	font-size: 27rpx;
	color:#333;
}
#codema {
	border-radius: 10rpx;
	background: #fff;
	margin-bottom: 30rpx;
}
.code-ma {
	margin: 20rpx 0;
	padding-left: 16rpx;
	height: 44rpx;
	font-size: 27rpx;
}
.getregister-ma {
	width: 243rpx;
	flex:0 0 243rpx;
	margin: 20rpx 0;
	height: 44rpx;
	line-height: 44rpx;
	text-align: center;
	border-left: 1px solid #999;
	font-size: 27rpx;
	color:#333;
}
.register-receive {
	height: 88rpx;
	line-height: 88rpx;
	border-radius: 10rpx;
	text-align: center;
	font-size: 34rpx;
	color: #fff;
	letter-spacing: 3rpx;
	background: #df3658;
}
/* 注册结束  */

/* 红包次数开始  */
#red-number {
	font-size: 0;
}
.red-number-text {
	height: 194rpx;
	line-height: 194rpx;
	font-size: 46rpx;
	text-align: center;
	color:#ccc;
	background: #fff;
}
.receive-number {
	display: block;
	height: 24rpx;
	margin: 40rpx 0 0 0;
	width: 100%;
	text-align: center;
	font-size: 24rpx;
	color: #333;
}
/* 红包次数结束  */

#red_late {
	
}
.category {
	flex: 0 0 105rpx;
	width:105rpx;
}
.red_late_content {
	padding: 48rpx 0;
	text-align: center;
    color: #333;
    background: #fff;
}
.red_late-txt1 {
	font-size: 40rpx;
	color: #333;
	font-weight: 900;
}
.red_late-txt2 {
	margin-top: 25rpx;
	font-size: 30rpx;
	color:#999;
}
/* 红包样式  */
#red-lottery {
	font-size: 0;
}
.lottery-content {
	padding: 40rpx 0 42rpx 36rpx;
	background: #fff;
	font-size: 36rpx;
	align-items: center; 
}
.lottery-content-right {
	flex:0 0 355rpx;
	width:355rpx;
	border-right:4rpx dotted #e2e0dc;
	box-sizing: border-box;
	overflow: hidden;
}
.lottery-content-text {
	height: 32rpx;
	line-height: 32rpx;
	margin-bottom: 24rpx;
	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden;
	font-size: 32rpx;
	color:#ff3d4a;
	font-weight: 500;
}
.lottry-date {
	margin-right: 10rpx;
	color: #999;
	font-size: 24rpx;
	letter-spacing: 2px;
	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden;
}
.lottery-content-price {
	width: 100%;
	margin-top: -20rpx;
	text-align: center;
	font-size: 40rpx;
	color:#ff3333;
}
.lottery-money-text {
	height: 22rpx;
	line-height: 22rpx;
	margin-top: 6rpx;
	font-size: 22rpx;
	color:#999;
}
.redbag-history {
	margin-top: 20rpx;
	padding: 60rpx 30rpx 46rpx 30rpx;
	border-radius: 10px;
	background: #ff94a9;
}
.title{
	/*width: 80%;*/
}
.line{
	flex:1;
	position: relative;
	top:-15rpx;
	border-bottom: 2px solid #999;
	opacity: 0.5;
}
.text{
	padding: 0 20rpx;
	font-weight: 700;
	font-size: 32rpx;
}
.redbag-people {
	max-height: 460rpx;
	overflow-y: auto;
	font-size: 30rpx
}
.people-item {
	margin-top: 40rpx;
	height: 70rpx;
	color:#333;
	font-weight: 700;
}
.people-logo {
	margin-right: 20rpx;
	width: 70rpx;
	height: 70rpx;
	border-radius: 70rpx;
	overflow: hidden;
}
.activity-rule {
	margin-top: 20rpx;
	padding: 60rpx 30rpx 20rpx 30rpx;
	border-radius: 10px;
	background: #ff94a9;
}
.rule-item {
	height: 52rpx;
	line-height: 52rpx;
	color:#333;
	font-size: 24rpx;
	font-weight: 700;
	letter-spacing: 2px;

}