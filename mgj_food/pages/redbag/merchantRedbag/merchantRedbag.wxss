@import "../../../components/redbag/orderPreview.wxss";
.lottery {
	margin-top: 20rpx;
	padding: 0 30rpx;
	height: 90rpx;
	line-height: 90rpx;
	background: #fff;
}
.lottery-style {
	display: inline-block;
	width: 42rpx;
	height: 42rpx;
	border: 2rpx solid #999;
	border-radius: 42rpx;
	margin-top: 22rpx;
}
.lottery-style-active {
	background: #ff9900
}
.lottery-wrapper {
	padding: 20rpx 30rpx 0;
}
.lottery-content {
	padding: 40rpx 0 50rpx 40rpx;
	background: #fff;
	font-size: 36rpx;
	align-items: center;
	border-bottom:1rpx dashed #ededed;  
}
.lottery-icon {
	width: 110rpx;
	height: 110rpx;
	margin-right: 20rpx;
	overflow: hidden;
}
.lottery-icon-img {
	width: 110rpx;
	height: 110rpx;
}
.lottery-img {
	width: 110rpx;
	height: 110rpx;
}
.lottery-content-text {
	width: 278rpx;
	margin-bottom: 24rpx;
	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden;
	font-weight: 500;
}
.money {
	color:#999
}
.lottery-content-price {
	margin-left: 20rpx;
	color:#ff3333;
}
.lottery-express {
	padding: 0 28rpx 0 38rpx;
	height: 52rpx;
	line-height: 52rpx;
	background: #fff;
	font-size: 22rpx;
	color:#333;
}
.active {
	background: #ff5959;
	border-bottom:1rpx dashed #ff5959; 
	color:#fff;
}
.itemReason-footer {
	height: 36rpx
}
.disable-redbag{
	color: #999 !important;
	font-weight: 200!important;
}