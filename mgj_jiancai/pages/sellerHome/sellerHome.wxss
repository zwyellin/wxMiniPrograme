}


.main{
  padding:0rpx;
}

.main image{
  width:100%;
  height: 100%
}


.main2 image{
  width:100%;
  height: auto;
  display: block
}
.more{
  color:#999;
  font-size:26rpx;
  text-align: center;
  line-height: 90rpx;
}


.boxHidden .main,.boxHidden .discountBox, .boxHidden .menu{
  filter: blur(5rpx)
}