.container{
  font-size: 30rpx;
  color: #333;
  padding-bottom: 100rpx;
}

.addressList{
  background: #fff;
  margin-top: 20rpx;
  margin-bottom: 1rpx;
}

.addressItem{
  padding: 30rpx 120rpx 30rpx 30rpx;
  line-height: 60rpx;
  position: relative;
  background: url(http://7xu5hi.com1.z0.glb.clouddn.com/201809141541431695861.png) repeat-x;
  background-size: auto 5rpx;
}

.addressItem image{
  width: 37rpx;
  height: 34rpx;
  position: absolute;
  right: 20rpx;
  top: 34%;
  padding: 20rpx;
  transform: rotateY(-50%);
}

.overShipping{
  position: absolute;
  top: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  right: 20rpx;
  width: 100rpx;
  font-size: 22rpx;
  text-align: center;
  color: #ff5959;
  line-height: 38rpx;
}


.addressAdd{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ff5959;
  background: #fff;
  font-weight: bold;
}

.addressAdd image{
  width: 29rpx;
  height: 29rpx;
  margin: 0 10rpx;
}

.addPop{
  position: fixed;
  top: 30rpx;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #f4f4f4;
}

.addPop .li{
  background: #fff;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}

.addPop .li view:nth-child(1){
  padding-right: 10rpx;
  min-width: 92rpx;
}

.addPop .li .checkbox{
  margin:0 20rpx 0 40rpx;
}

.addPop .li input{
  flex: 1;
}




























