/* pages/classifyDetaile/classifyDetaile.wxss */
.box{
  position: relative;
}
.searchBox{
  padding: 0 40rpx;
  padding-bottom:20rpx;
  position: relative;
  background: #fff;
}
#search{
  height:60rpx;
  line-height: 60rpx;
  background: #ececec;
  border-radius: 30rpx;
  padding-left:84rpx;
  color:#888;
}
.searchIcon{
  width:20rpx;
  position: absolute;
  left:75rpx;
  top:20rpx;
}

.list{
  padding:30rpx;
  background: #fff;
  margin-bottom:20rpx;
  overflow: hidden;
}
.brand{
  height:100rpx;
  overflow: hidden;
}
.brandL{
  float:left;
  padding-top:8rpx;
  margin-right:20rpx;
}
.brandL image{
  width: 92rpx;
  height: 66rpx;
}
.brandRight{
  float:left;
}
.brandRightUp{
  font-size:34rpx;
  font-weight: bold;
}
.brandRightDown image{
  width:23rpx;
}

.itemBox{
  height: 397rpx;
  display: flex;
  flex-direction: row;
  overflow-x: auto;
}
.item{
  width:240rpx;
  float:left;
  padding-bottom:40rpx;
  margin-right:20rpx;
}
.imgBox{
  width:240rpx;
  height:240rpx;
  border-radius: 10rpx;
  overflow: hidden;
  position: relative;
}
.imgBox .commodityImg{
  width:100%;
  height:100%;
}
.imgBox .leftTop{
  position: absolute;
  left:0;
  top:0;
  width:54rpx;
  height:54rpx;
}
.leftTopBg{
  width:100%;
  height:100%;
}
.leftTop text{
  color:#fff;
  font-size:24rpx;
  position: absolute;
  left:3px;
}


.title{
  font-size:24rpx;
  color:#191919;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden; 
  height:75rpx;
  padding-top:12rpx;
}
.commodityInfo{
  overflow: hidden;
  line-height: 40rpx;
}
.price{
  font-size:28rpx;
  color:#e51f1f;
  float:left;
  font-weight: bold;
}
.salesVolume{
  float:right;
  font-size:22rpx;
  color:#666;
}
.nothingCommodity{
  text-align: center;
  color: #999;
  font-size: 26rpx;
  position: absolute;
  top: 80rpx;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.nothingCommodity image{
  display: none;
  width:243rpx;
  height:195rpx;
  margin: 400rpx auto 40rpx;
}


.history{
  padding:30rpx 0 30rpx 30rpx;
}

.h2{
  font-size:26rpx;
  color:#666;
  line-height: 50rpx;
}
.con{
  padding-top:20rpx;
}
.history .list{
  color:#333;
  font-size:24rpx;
  border:1rpx solid #ccc;
  border-radius: 5rpx;
  display: inline-block;
  padding:0 30rpx;
  min-height: 48rpx;
  line-height: 48rpx;
  margin-right:20rpx;
  background: #f5f5f5;
}
