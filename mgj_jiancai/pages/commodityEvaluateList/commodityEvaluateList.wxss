.title{
   text-align: center;
   background: white;
   line-height: 50rpx;
}
.con4{
  padding:40rpx 38rpx;
  background: white;
  margin-bottom:22rpx;
}
.userInfo{
  padding-bottom:20rpx;
  display: flex;
}
.userImg{
  width:80rpx;
  height:80rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin-right:10rpx;
  background: #eee;
}
.userInfoR{
  flex: 1;
}
.evaluateImg{
  display: flex;
  flex-wrap: wrap;
}

.evaluateImg view{
  width: 215rpx;
  height: 215rpx;
  margin: 0 10rpx 10rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.evaluateImg image{  
  max-width:215rpx;
  max-height:215rpx;
  border-radius: 5rpx;
}
.evaluateTxt{
  font-size: 26rpx;
  color:#888;
  line-height: 40rpx;
  padding:15rpx 0;
}
.evaluateDate{
  color:#b2b2b2;
  font-size:24rpx;
}

.navTab {
  display: flex;
  justify-content: center;
  height: 60rpx;
  border-bottom: 1rpx solid #f5f5f5;
  background: #fff;
}

.navTab text{
  margin: 0 150rpx;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 30rpx;
  font-weight: 600;
}

.navTab text.active{
  border-bottom: 4rpx solid #eb4245;
  color: #eb4245;
}


