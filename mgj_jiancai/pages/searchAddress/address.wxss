.container{
  font-size: 30rpx;
  color: #333;
}

.addressList{
  background: #fff;
  margin-bottom: 1rpx;
}

.addressItem{
  padding: 30rpx 80rpx 30rpx 30rpx;
  line-height: 60rpx;
  position: relative;
  background: url(http://7xu5hi.com1.z0.glb.clouddn.com/201809141541431695861.png) repeat-x;
  background-size: auto 5rpx;
}

.addressItem image{
  width: 37rpx;
  height: 34rpx;
  position: absolute;
  right: 30rpx;
  top: 44%;
  transform: rotateY(-50%);
}


.addressAdd{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ff5959;
  background: #fff;
  font-weight: bold;
}

.addressAdd image{
  width: 29rpx;
  height: 29rpx;
  margin: 0 10rpx;
}

.addPop{
  position: fixed;
  top: 30rpx;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #f4f4f4;
}

.addPop .li{
  background: #fff;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}

.addPop .li view:nth-child(1){
  padding-right: 10rpx;
  min-width: 92rpx;
}

.addPop .li .checkbox{
  margin:0 20rpx 0 40rpx;
}

.addPop .li input{
  flex: 1;
}





























.searchBox{
  padding: 0 40rpx;
  padding-bottom:20rpx;
  position: relative;
  background: #fff;
}
#search{
  height:60rpx;
  line-height: 60rpx;
  background: #ececec;
  border-radius: 30rpx;
  padding-left:64rpx;
  color:#888;
}
.searchIcon{
  width:20rpx;
  position: absolute;
  left:75rpx;
  top:20rpx;
}

.h2{
  height: 74rpx;
  line-height: 74rpx;
  padding: 0 30rpx;
  background: #f5f5f5;
  font-size: 26rpx;
  color: #666;
}

.addressLis{
  min-height: 22rpx;
  background: #fff;
  padding: 25rpx 30rpx;
  border-bottom: 1rpx solid #f7f7f7;
  font-size: 22rpx;
  color: #aaa;
  position: relative
}

.addressLis2{
  font-size: 28rpx;
}

.addressLis text{
  position: absolute;
  right: 20rpx;
  top: 0;
  color: #333;
  display: block;
  padding-left: 40rpx;
  line-height: 90rpx;
  font-size: 28rpx;
  background: url(http://7xu5hi.com1.z0.glb.clouddn.com/201809201509094583661.png) no-repeat 0 center;
  background-size: 29rpx;
}

.addressLis view{
  font-size: 28rpx;
  color: #111;
  padding-bottom: 25rpx;
}


.addressLis:nth-child(3) view{
  padding: 0;
}