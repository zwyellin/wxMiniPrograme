/* pages/evaluateList/evaluateList.wxss */
.evaluateBox{
  font-size: 24rpx;
  padding: 0 30rpx;
  background: white;
}
.evaluateItem{
  border-bottom: 1px solid #eaeaea;
  padding: 30rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.evaluateItem image{
  width: 118rpx;
  height: 118rpx;
}
.evaluateItem .evaluateTxt{
  flex: 1;
  font-size: 28rpx;
  font-weight: 600;
  padding-left: 20rpx;
}
.evaluateItem .evaluateTxt view{
  font-size: 22rpx;
  font-weight: 100;
  padding-top: 28rpx;
}
.evaluateItem .evaluates{
  width: 150rpx;
  height: 52rpx;
  line-height: 52rpx;
  border-radius: 52rpx;
  border:1px solid #eb4245;
  color: #eb4245;
  text-align: center;
}